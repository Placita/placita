<div class="d-flex justify-content-center align-items-start">
  <div class="col-lg-5 col-md-6 col-sm-7 bg-light p-5 mt-5">
    <h1 class="text-center text-primary">Happenings</h1>
    <!-- TODO: pagination -->
  </div>
</div>

{{#each happenings}}
  <div class="d-flex justify-content-center align-items-start">
    <div class="col-lg-5 col-md-6 col-sm-7 bg-light p-4 pt-5 mt-3">
      <h3 class="text-secondary">{{ this.name }}</h3>
      <h5 class="text-dark">{{ formatDate this.dateTime }}</h5>
      <p>{{ this.description }}</p>
    </div>   
  </div>
{{/each}}
